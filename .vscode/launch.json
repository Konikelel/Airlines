{
    "configurations": [
        {
            "name": "Test debug",
            "cwd": "${workspaceRoot}",
            "type": "cppdbg",
            "request": "launch",
            "externalConsole": false,
            "program": "${cmake.testProgram} ",
            "args": ["${cmake.testArgs}"],
            "setupCommands": [
                {
                    "description": "Enable break on all exceptions",
                    "text": "catch throw",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Airlines debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\Airlines.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:debuggerPath}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable break on all exceptions",
                    "text": "catch throw",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake build"
        }
    ]
}
